<h2>Edit this pokemon</h2>
<form action="/pokemons/<%= @pokemon.id%>" method="post">
  <input type="hidden" name="_method" value="put">

  <label>Name:</label>
  <input type="text" name="pokemon[name]" value ="<%= @pokemon.name%>">

  <label>CP:</label>
  <input type="text" name="pokemon[cp]" value ="<%= @pokemon.cp%>">

  <label>Level:</label>
  <input type="text" name="pokemon[poke_type]" value ="<%= @pokemon.poke_type%>">

  <label>Img URL:</label>
  <input type="text" name="pokemon[img_url]" value ="<%= @pokemon.img_url%>">

  <label>Trainer:</label>
  <select name="pokemon[trainer_id]">
    <% Trainer.all.each do |trainer|%>
    <option value="<%= trainer.id%>"><%= trainer.name%></option>
    <%end%>
  </select>
  <input type="submit" value="Update">

</form>

<h3>MURDER this pokemon</h3>
  <form action="/pokemons/<%=@pokemon.id%>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>
