<%pokemons = @trainer.pokemons%>
<div class="pokemon">

  <h2><%= @trainer.name%></h2>
  <img src="<%= @trainer.img_url%>" alt="<%= @trainer.name%>" />
    <ul>
      <li>Level : <%= @trainer.level%></li>
    </ul>

    <h3><%= @trainer.name%>'s Pokemon</h3>
    <ul>
      <%pokemons.each do |pokemon|%>
      <li><%= pokemon.name%></li>
      <%end%>
    </ul>

    <h3><a href="/trainers/<%= @trainer.id%>/edit">Edit this trainer.</a></h3>
